    <insert id="insertUserByUserInfo" parameterType="com.design.helpPlatform.entity.User" useGeneratedKeys="true" keyProperty="id">
        insert into <include refid="t_user"/>
        values (
                #{id},
                #{userName},
                #{password},
                #{phoneNum},
                #{nickName},
                #{submitAddr},
                #{birthDay},
                #{sex}
        )
    </insert>


